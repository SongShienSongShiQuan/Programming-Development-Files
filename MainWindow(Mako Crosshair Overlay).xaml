<Window x:Class="Mako_Crosshair_Overlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mako_Crosshair_Overlay"
        mc:Ignorable="d"
        Title="Mako Crosshair Overlay" Height="200" Width="200"
        PreviewKeyDown="KEY_DETECT"
        AllowsTransparency="True"
        Topmost="True"
        WindowStyle="None">
    <Window.Background>
        <SolidColorBrush x:Name="Set_Opacity" Opacity="0" Color="DarkGray"/>
    </Window.Background>
    <Grid>
        <Grid HorizontalAlignment="Center" Height="200" VerticalAlignment="Center" Width="200">
            <Border BorderThickness="0" HorizontalAlignment="Center" Height="25" VerticalAlignment="Center" Width="30">
                <Border.Background>
                    <ImageBrush ImageSource="/png-transparent-circle-point-reticle-stereo-rings-white-text-black.png" />
                </Border.Background>
            </Border>
            <TextBlock Name="PRINT" HorizontalAlignment="Center" Height="16" Margin="0,66,0,0" TextWrapping="Wrap" Text="NULL" VerticalAlignment="Top" Width="140" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
